<Window x:Class="SafeWord.ViewPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafeWord"
        Closing="Window_Closing"
        mc:Ignorable="d"
        Title="ViewPassword" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" Name="Results" Grid.RowSpan="3" Margin="10,10,0,10">
            <ListBoxItem>Passwords will show up here</ListBoxItem>
        </ListBox>
        <TextBox Margin="61,55,61,55" Grid.Column="1" Grid.Row="1" Name="Search"  FontSize="20" TextChanged="Search_TextChanged"/>
        <Button Margin="297,37,28,73" Grid.Column="1" Click="Back_Click"> Back</Button>

    </Grid>
</Window>
